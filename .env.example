# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_TIMEOUT=120

# Model Configuration (leave empty for auto-detection)
DEFAULT_TEXT_MODEL=
DEFAULT_VISION_MODEL=
MODEL_QUANTIZATION=Q4_K_M

# GUI Configuration
WINDOW_WIDTH=800
WINDOW_HEIGHT=600
THEME=system

# Security Configuration
REQUIRE_CONFIRMATION=true
PERMISSION_LEVEL=advanced
ENABLE_AUDIT_LOG=true
AUDIT_LOG_PATH=logs/audit.log

# Automation Configuration
SCREENSHOT_QUALITY=85
AUTOMATION_DELAY_MS=100
FAILSAFE_ENABLED=true
SENSITIVE_ACTIONS_REQUIRE_CONFIRMATION=true

# Vision Configuration
VISION_DETAIL_LEVEL=detailed
VISION_ANALYSIS_TIMEOUT=60
AUTO_CLEANUP_SCREENSHOTS=true

# Advanced Configuration
DEBUG_MODE=false
LOG_LEVEL=INFO
MAX_CHAT_HISTORY=100

# LangChain Integration (Optional)
LANGCHAIN_ENABLED=false
LANGCHAIN_TOOLS=wikipedia,calculator,duckduckgo_search
